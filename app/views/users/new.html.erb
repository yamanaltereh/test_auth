<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Your name *", required: true%>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "Your name *", required: true%>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password, placeholder: "Your name *", required: true%>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation, placeholder: "Your name *", required: true%>
  <hr>
  <%= f.submit "Sign up", class: "btn btn-xl"%>
<% end %>